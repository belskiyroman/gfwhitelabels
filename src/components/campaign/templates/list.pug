- 'use strict';
section.small-section.filter
    form(
        action="/campaigns/" 
        method="get" 
        role="form"
    )
        .container
            .row
                .col-lg-3
                    .one_drop
                        select.form-control(multiple="true" title="INDUSTRY").selectpicker
                            option Advertising & Marketing
                            option Arts, Fashion, & Media
                            option Business to Business
                            option Cleantech
                            option Construction & Manufacturing
                            option Consumer Products
                            option Energy/Transport

                .col-lg-3
                    .one_drop
                        select(title="STAGE").form-control.selectpicker
                            option Pre-seed
                            option Seed
                            option Bridge to Series A
                            option Series A
                            option Bridge to Series B
                            option Series B

                .col-lg-3
                    .one_drop
                        select(title="LOCATION").form-control.selectpicker
                            option Locations
                            option Los Angeles, CA
                            option San Francisco, CA
                            option New York, NY
                            option Las Vegas, NV

                .col-lg-3
                    .one_drop
                        select(title="DEAL TYPE").form-control.selectpicker
                            option Common Equity
                            option PayBack Share

            .create-alert-block
                .row
                    .col-sm-6.col-lg-10.col-xs-12.text-sm-left.text-xs-center
                        a(href="#").pull-right.btn.mr30.text-uppercase.auth-pop create alert

                    .col-sm-6.col-lg-2.col-xs-12.text-xs-center
                        select.orderby.custom-select
                            option(checked="checked" value="0") Order by
section.campaing-list
    .container#campaignList
        .row
            for campaign in campaigns

                .col-lg-4.col-xs-12.col-sm-12.col-md-12
                    a(href=Urls['campaign-detail'](campaign.id)).block_link
                    .one_block
                        .for_img
                            img(
                                src=(campaign.list_image_data ? campaign.list_image_data.url : '/img/test.png')
                                alt=campaign.company.name
                            )

                            .more_inform
                                .title.text-center
                                    if campaign.security_type == 0
                                        h3 Valuation: #{collection.showBeautifulNumber(campaign.premoney_valuation)}
                                    else
                                        h3 Percentage Revenue: #{campaign.percentage_revenue}%

                                .small_text
                                    if campaign.company.tagline
                                        p #{campaign.company.tagline.substr(0, 120)}

                                .ico_cont
                                    a(href=Urls['campaign-detail'](campaign.id) + '#team').link-1
                                        i.fa.fa-users
                                    a(href=Urls['campaign-detail'](campaign.id) + '#overview').link-1
                                        i.fa.fa-list

                                .bottom_pr
                                    if campaign.security_type == 0
                                        p Price per share: #{collection.showBeautifulNumber(campaign.price_per_share)}
                                        p Number of shares: #{campaign.min_number_of_shares}
                                    else
                                        //- p % Revenue: #{campaign.percentage_revenue}%
                                        p Cap: #{campaign.cap}
                                        p Expiration Date: #{campaign.expiration_date}


                        .title.text-xs-center
                            h3.m-t-0= campaign.company.name
                            span.place
                                i.fa.fa-map-marker
                                = campaign.company.city + ' ' + campaign.company.state
                            .clear
                        .description
                            if campaign.pitch
                                p= campaign.pitch.substr(0,250)

                        .progress_bar_container
                            span.left_text #{campaign.progress} % Funded
                            span.right_text 
                                b #{collection.showBeautifulNumber(campaign.amount_raised)} 
                                | of #{collection.showBeautifulNumber(campaign.minimum_raise)}
                            .clear
                                progress.progress(value=campaign.progress max="100") #{campaign.progress} %

                        .bottom_text
                            span.left_desc
                                b Security:
                                | #{campaign.get_security_type_display}
                            span.right_desc
                                b Industry: 
                                | Lorem ipsum
                            .clear
section.pagination
    .container
        .row
            .col-lg-12
                nav
                    ul.pagination.pagination-sm
                        li.page-item.active
                            a(href="#").page-link 1
                        li.page-item
                            a(href="#").page-link 2
                        li.page-item
                            a(href="#").page-link 3
                        li.page-item
                            a(href="#" aria-label="Next").page-link
                                span(aria-hidden="true")
                                    i.fa.fa-angle-right
                                span.sr-only Next

