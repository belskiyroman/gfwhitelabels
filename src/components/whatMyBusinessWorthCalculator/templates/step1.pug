include ../../../templates/mixins.pug

+breadcrumbs('Capital Raise Calculator ', 'step 1',
    [
        ['Home', '/'],
        ["What's My Business Worth?", '/'],
        ["Capital Raise Calculator", '']
    ]
)

.container.calculator-container
    .row
        .col-xs-12
            ul.list-inline.top-breadcrambs.mb45.capitalraise
                li
                    a(href="/calculator/whatmybusinessworth/intro").btn.text-uppercase Intro
                li
                    a(href="/calculator/whatmybusinessworth/step-1").current.btn.text-uppercase step 1
                li
                    a(href="/calculator/whatmybusinessworth/step-2").btn.text-uppercase step 2
                li
                    a(href="/calculator/whatmybusinessworth/finish").btn.text-uppercase finish

    .row
        .offset-lg-3.col-lg-6
            form(method="post" action="")
                .form-body.clearfix

                    .form-group.row
                        label(for="excessCash").col-lg-12 How much excess cash  does your business need to maintain as a buffer against the unexpected?&nbsp;&nbsp;
                            i(aria-hidden="true")#excess_cash.fa.fa-question-circle.text-muted

                        .col-lg-12
                            input#excessCash.form-control.js-field(
                                value= formatPrice(data.excessCash),
                                type='text',
                                placeholder='Excess Cash',
                                data-input-mask='price',
                                data-model-value='excessCash',
                                data-current-value= data.excessCash)

                    .form-group.row
                        label(for="ownCache").col-lg-12 How much cash does your business currently have?

                        .col-lg-12
                            input#ownCache.form-control.js-field(
                                value= formatPrice(data.ownCache),
                                type='text',
                                placeholder='Cash on Hands',
                                data-input-mask='price',
                                data-model-value='ownCache',
                                data-current-value= data.ownCache)

                    .form-group.row
                        label(for="projectedRevenueYear").col-lg-12 What is your business’s projected revenue for the next 12 months?

                        .col-lg-12
                            input#projectedRevenueYear.form-control.js-field(
                                value= formatPrice(data.projectedRevenueYear),
                                type='text',
                                placeholder='Year One Projected Revenue',
                                data-input-mask='price',
                                data-model-value='projectedRevenueYear',
                                data-current-value= data.projectedRevenueYear)

                    .form-group.row
                        label(for="projectedRevenueTwoYears").col-lg-12 What is your business’s projected revenue for the subsequent 12 months? (i.e. months 13 - 24)

                        .col-lg-12
                            input#projectedRevenueTwoYears.form-control.js-field(
                                value= formatPrice(data.projectedRevenueTwoYears),
                                type='text',
                                placeholder='Year Two Projected Revenue',
                                data-input-mask='price',
                                data-model-value='projectedRevenueTwoYears',
                                data-current-value= data.projectedRevenueTwoYears)

                    .form-group.row
                        label(for="grossMargin").col-lg-12 Let's focus on Cost of Goods Sold, or COGS: What gross margin  do you expect to earn on your business’s sales over the next 2 years?&nbsp;&nbsp;
                            i(aria-hidden="true")#gross_margin.fa.fa-question-circle.text-muted

                        .col-lg-12
                            // here must be bootstrap slider instead input
                            // Roman K.: For calculator work I've left it as input. Has to be changed to slider

                            input#grossMargin.form-control.js-field(
                                value= data.grossMargin,
                                type='text',
                                data-input-mask='percent',
                                data-model-value='grossMargin')

                    .form-group.row
                        label(for="monthlyOperatingYear").col-lg-12 What do you expect your monthly operating expenses to average over the next 12 months?&nbsp;&nbsp;
                            i(aria-hidden="true")#profit_year_five.fa.fa-question-circle.text-muted

                        .col-lg-12
                            input#monthlyOperatingYear.form-control.js-field(
                                value= formatPrice(data.monthlyOperatingYear),
                                type='text',
                                placeholder='Profit Year Five',
                                data-input-mask='price',
                                data-model-value='monthlyOperatingYear',
                                data-current-value= data.monthlyOperatingYear)

                    .form-group.row.clearfix.m0
                        .col-lg-6.mt30
                            a(href='/calculator/whatmybusinessworth/intro').link-3 Go back
                            p.text-muted Don&apos;t worry we saved this info

                        .col-lg-6.mt30
                            .controls
                                a(
                                    href="/calculator/whatmybusinessworth/step-2"
                                ).btn.btn-primary.btn-lg.pull-right.text-uppercase Next
                                // add class .pointer-events-none to disable all events for this button

