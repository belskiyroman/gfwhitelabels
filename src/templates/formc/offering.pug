- 'use strict';
include ../mixins.pug

+breadcrumbs('Create Formc', '', [['home', '/',], [ 'current', page.get_absolute_url]])


section.create-company-general.container.m-b-85
  +menu('fomc')

  .col-lg-8
    h2.text-uppercase.text-lg-center.text-xs-center.dosis.m-t-0 FORM C
    form(metod="post" action="").form-section
      if values.id && values.id != ''
          input(type='hidden' name='id' value=values.id id='id')
      .form-group.row.clearfix.required
          each k,v in fields
              | #{ k } #{ v }
      .row
        .col-lg-6.pull-right
          .col-lg-6
            button(type="submit").btn.btn-lg.btn-primary.text-uppercase.pull-right save
          .col-lg-6
            a(href="/api/campaign/" + values.id target="_blank").btn.btn-lg.btn-secondary.text-uppercase preview
